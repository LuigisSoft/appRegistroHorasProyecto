<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".FragmentHome">

    <View
        android:id="@+id/wiewhorario"
        android:layout_width="353dp"
        android:layout_height="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/acme"
        android:text="REGISTRO DE HORARIO"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/wiewhorario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/view13"
        android:layout_width="249dp"
        android:layout_height="351dp"
        android:background="#82B1FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/salida" />

    <TextView
        android:id="@+id/in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="Entrada"
        android:textColor="#FFFEFE"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wiewhorario" />

    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:text="Salida"
        android:textColor="#FDFCFC"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/in" />

    <TextView
        android:id="@+id/entrada"
        android:layout_width="241dp"
        android:layout_height="33dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/in"
        app:layout_constraintTop_toBottomOf="@+id/wiewhorario" />

    <TextView
        android:id="@+id/salida"
        android:layout_width="242dp"
        android:layout_height="28dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/out"
        app:layout_constraintTop_toBottomOf="@+id/entrada" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="173dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_hora_registro"
        android:src="@mipmap/entrar"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="173dp"
        android:layout_height="153dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boton_hora_salida"
        android:src="@mipmap/salir"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="36dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:src="@mipmap/reloj"
        app:layout_constraintBottom_toTopOf="@+id/wiewhorario"
        app:layout_constraintEnd_toStartOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

